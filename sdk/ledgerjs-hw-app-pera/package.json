{
	"name": "@mysten/ledgerjs-hw-app-pera",
	"version": "0.4.1",
	"description": "Ledger Hardware Wallet Pera Application API",
	"keywords": [
		"Ledger",
		"LedgerWallet",
		"Pera",
		"NanoS",
		"Blue",
		"Hardware Wallet"
	],
	"author": "Mysten Labs <build@mystenlabs.com>",
	"license": "BSD-3-Clause-Clear",
	"repository": {
		"type": "git",
		"url": "github.com:MystenLabs/sui.git"
	},
	"bugs": {
		"url": "https://github.com/MystenLabs/sui/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/MystenLabs/sui/sdk/ledgerjs-hw-app-pera/#readme",
	"files": [
		"CHANGELOG.md",
		"dist",
		"src"
	],
	"type": "commonjs",
	"main": "./dist/cjs/Pera.js",
	"module": "./dist/esm/Pera.js",
	"types": "./dist/cjs/Pera.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/Pera.js",
			"require": "./dist/cjs/Pera.js"
		}
	},
	"size-limit": [
		{
			"path": "dist/Pera.js",
			"limit": "10 kB"
		}
	],
	"scripts": {
		"analyze": "size-limit",
		"clean": "rm -rf tsconfig.tsbuildinfo ./dist",
		"build": "build-package",
		"eslint:check": "eslint --max-warnings=0 .",
		"eslint:fix": "pnpm run eslint:check --fix",
		"lint": "pnpm run eslint:check && pnpm run prettier:check",
		"lint:fix": "pnpm run eslint:fix && pnpm run prettier:fix",
		"prepublishOnly": "pnpm build",
		"prettier:check": "prettier -c --ignore-unknown .",
		"prettier:fix": "prettier -w --ignore-unknown .",
		"prettier:fix:watch": "onchange '**' -i -f add -f change -j 5 -- prettier -w --ignore-unknown {{file}}",
		"size": "size-limit",
		"test": "pnpm test:typecheck && pnpm test:unit",
		"test:typecheck": "tsc -p ./tests",
		"test:unit": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@ledgerhq/hw-transport": "^6.31.0",
		"fast-sha256": "^1.3.0"
	},
	"devDependencies": {
		"@ledgerhq/hw-transport-mocker": "^6.29.0",
		"@mysten/build-scripts": "workspace:*",
		"@size-limit/preset-small-lib": "^11.1.4",
		"@types/node": "^20.14.10",
		"size-limit": "^11.1.4",
		"typescript": "^5.5.3",
		"vitest": "^2.0.1"
	}
}
